    {
      "name": "Erro Sensor duplicado (409/400)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/sensores",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
