          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"idEvento\": 90001, \"idMoto\": 2001, \"tipo\": \"ENTRADA\", \"timestamp\": \"2025-11-05T10:00:00Z\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 201', () => pm.response.to.have.status(201));"
            ]
          }
        }
      ]
    },
    {
      "name": "Consultar Moto (status NO_PATIO)",
      "request": {
        "method": "GET",
